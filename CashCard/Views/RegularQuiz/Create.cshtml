@model CashCard.Models.RegularQuiz

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutBootstrap.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>RegularDetailQuiz</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Quiz, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Quiz, new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.Quiz)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RegularGroup, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("RegularGroupId", (SelectList)ViewBag.RegularGroups, new { @class = "form-control", data_live_search = "true" })
                @Html.ValidationMessageFor(model => model.RegularGroupId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RegularType, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("RegularType", (SelectList)ViewBag.RegularTypes, new { @class = "form-control"})
                @Html.ValidationMessageFor(model => model.Quiz)
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.Info, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Info, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Info)
            </div>
        </div>

      

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@section Scripts {
    <script type="text/javascript">

       
        $("#RegularGroupId").selectpicker();
    </script>
  
}
