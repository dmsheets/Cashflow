

@{
    ViewBag.Title = "Manage Account";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div class="row">
    <div class="col-md-12">
       
          

            @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
            {
                @Html.AntiForgeryToken()
                <p>You're Reseting password <strong>@ViewBag.UserName</strong>.</p>
                @Html.Hidden("userId", Request.Params["userId"])
                <div class="form-group">
                    @Html.Label("New Password", new {@class = "col-md-2 control-label"})
                    <div class="col-md-10">
                        @Html.TextBox("newPass","123456", new {@class = "form-control", @readonly="readonly"})
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Reset" class="btn btn-default" />
                    </div>
                </div>
            }

      

     
    </div>
</div>

