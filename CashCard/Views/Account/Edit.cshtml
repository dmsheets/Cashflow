@model CashCard.Models.UserViewModel
@{
    ViewBag.Title = "Update User";
    Layout = "~/Views/Shared/_LayoutBootstrap.cshtml";
}


<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Edit", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Edit User</h4>
    <hr />
    
   
     @Html.ValidationSummary(true)
   
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Branch", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownList("BranchId", (SelectList)ViewBag.Branches, new { @class = "form-control" })
        </div>

    </div>
    <div class="form-group">
        @Html.Label("Roles",new {@class="col-md-2 control-label"})
        <div class="col-md-10">
            @Html.DropDownList("Roles", (MultiSelectList)ViewBag.multi, new { @class = "form-control", multiple = "multiple" })
     
        </div>
    </div>
    <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-default" />
            </div>
        </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">

        $(".selectMulti").selectpicker();

        var temp = @Html.Raw(Json.Encode(Model.Roles));
        $("#Roles").val(temp);
        $("#Roles").selectpicker('refresh');
        //alert(temp);

    </script>
   
}
