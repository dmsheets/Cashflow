@model CashCard.Models.RegularGroup

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutBootstrap.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>RegularGroup</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.AccountNo, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.AccountNo, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AccountNo)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AccountDesription, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.AccountDesription, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AccountDesription)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.GroupType, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("GroupType", (SelectList)ViewBag.GroupTypes, new { @class = "form-control col-md-2" })
                @Html.ValidationMessageFor(model => model.GroupType)
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.Info, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Info, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Info)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


   