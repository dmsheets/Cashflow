@using Microsoft.AspNet.Identity

<ul class="nav navbar-right top-nav">

    <li class="dropdown">

        @if (Request.IsAuthenticated)
        {
         
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i>  @User.Identity.GetUserName() <b class="caret"></b></a>
                <ul class="dropdown-menu">
                  
                    <li>
                        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new {id = "logoutForm"}))
                        {
                             @Html.AntiForgeryToken()
                            <a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-fw fa-power-off"></i> Log Out</a>
                        }
                    </li>
                </ul>
          
        }
        else
        {  
             <a href="/Account/Login" @*class="dropdown-toggle"*@ @*data-toggle="dropdown"*@><i class="fa fa-user"></i> Login @*<b class="caret"></b>*@</a>
            
        }
    </li>
</ul>
