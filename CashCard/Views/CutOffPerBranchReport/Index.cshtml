@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutBootstrap.cshtml";
}

<h2>Index</h2>

<div class="row">
    <div class="col-lg-12">
        <div class="form-inline">
            <div class="form-group">
                <label>Start Date</label>
                <div>
                    <input id="startDt" placeholder="yyyy/mm/dd" class="form-control date" />
                </div>
            </div>
            <div class="form-group">
                <label>End Date</label>
                <div>
                    <input id="endDt" placeholder="yyyy/mm/dd" class="form-control date" />
                </div>

            </div>
            <div class="form-group">
                <label>Branch</label>
                <div>
                    @Html.DropDownList("Branch", (SelectList)ViewBag.Branches, new { @class = "form-control" })
                </div>

            </div>
            <div class="form-group">
                <label style="visibility: hidden">Action</label>
                <div>
                    <button id="btnSearch" class="btn btn-default form-control">Search</button>

                </div>
            </div>



        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Branch</th>
                    <th>State</th>
                    <th>Previous Ballance</th>
                    <th>End Ballance</th>
                    <th>Cutoff Date</th>
                    <th>Report</th>
                </tr>

            </thead>

        </table>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/datatable")
    @Scripts.Render("~/bundles/jquerynumber")
    @Scripts.Render("~/bundles/numeral")
    <script type="text/javascript">
        var $dt = $(".date").datepicker({
            dateFormat: "yy/mm/dd",
            onClose:
                function (dateText, inst) {
                    $(this).datepicker('option', 'dateFormat', 'yy/mm/dd');
                }
        });

        $dt.datepicker('setDate',
            new Date());


        var tbl = $(".table").DataTable(
        {
            "lengthChange": false,
            "searching": false,
            "ordering": false,
            "processing": true,
            "serverSide": true,
            "ajax": {
                "url": '@Url.Action("FindData")',
                "data": function (d) {
                    d.startDate = $("#startDt").val();
                    d.endDate = $("#endDt").val();
                    d.BranchId = $("#Branch").val();

                }
            },
            "columnDefs": [
                {
                    "render": function (data, type, row) {
                        var dt = window.location.origin;
                    return "<a class='rpt' idCutoff='" + data + "' href='" + dt + "/CutOffPerBranchReport/GetReport/" + data + "'>Report</a>";
                    },
                "targets":5}
            ]
        });
        $("#btnSearch").click(function () {
            tbl.ajax.reload();
        });

     
    </script>
}

