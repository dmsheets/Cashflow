@model List<string>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutBootstrap.cshtml";
}

<h2>Index</h2>
<div class="row">
    <div class="col-lg-12">
        <div class="form-inline">
            <div class="form-group">
                <label>Start Date</label>
                <div class="hero-unit">
                    <input id="startDt" placeholder="yyyy/mm/dd" class="form-control date" />
                </div>
            </div>
            <div class="form-group">
                <label>End Date</label>
                <div>
                    <input id="endDt" placeholder="yyyy/mm/dd" class="form-control date" />
                </div>

            </div>
           
            <div class="form-group">
                <label>Report Type</label>
                <div>
                    <select id="reportType" class="form-control">
                        <option value="1">
                        Report 1</option>
                        <option value="2">Report 2</option>
                        <option value="3">Report 3</option>
                    </select>
                </div>

            </div>
            <div class="form-group">
                <label style="visibility: hidden">Action</label>
                <div>
                    <button id="btnSearch" class="btn btn-default form-control">Search</button>

                </div>
            </div>



        </div>
    </div>
</div>
<div class="row" id="rpt1">
    <div class="col-lg-12">
        <table class="table table-striped table-bordered" id="tbl1">
            <thead>
                <tr>
                    <th>
                        Detail Pengeluaran
                    </th>
                    @foreach (var s in Model)
                    {
                        <th>
                            @s
                        </th>
                    }
                </tr>

            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>


<div class="row" id="rpt2">
    <div class="col-lg-12">
        <table class="table table-striped table-bordered" id="tbl2">
            <thead>
                <tr>
                    <th>
                        Branch Office
                    </th>
                    <th>
                        Promosi
                    </th>
                    <th>
                        Keperluan Kantor
                    </th>
                    <th>
                        Keperluan Operasional
                    </th>
                    <th>
                        Entertainment
                    </th>
                    <th>Komunikasi</th>
                    <th>Hotel</th>
                    <th>Irregularity</th>
                    <th>Transportasi</th>
                    <th>Sob</th>

                </tr>

            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

<div class="row" id="rpt3">
    <div class="col-lg-12">
        <table class="table table-striped table-bordered" id="tbl3">
            <thead>
                <tr>
                    <th>
                        GL Account
                    </th>
                    <th>
                        Info
                    </th>
                    <th >
                        Total
                    </th>


                </tr>

            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/datatable")
    @Scripts.Render("~/bundles/jquerynumber")
    @Scripts.Render("~/bundles/numeral")

    <script type="text/javascript">

        var pathToSWF = '@Url.Content("~/Content/DataTables/swf/copy_csv_xls_pdf.swf")';
        var $dt = $(".date").datepicker({
            dateFormat: "yy/mm/dd",
            onClose:
                function (dateText, inst) {
                    $(this).datepicker('option', 'dateFormat', 'yy/mm/dd');
                }
        });

        $dt.datepicker('setDate',
            new Date());
        var tbl1 = $("#tbl1").DataTable(
        {
            "lengthChange": false,
            "searching": false,
            "ordering": false,
            "paging": false,
            "info": false,
            "processing": true,
            "serverSide": true,
            "ajax": {
                "url": '@Url.Action("FindData1")',
                "data": function(d) {
                    d.startDate = $("#startDt").val();
                    d.endDate = $("#endDt").val();

                }
            },
            "dom": 'T<"clear">lfrtip',
            "tableTools": {
                "sSwfPath": pathToSWF
            }

        });


        var tbl2 = $("#tbl2").DataTable(
        {
            "lengthChange": false,
            "searching": false,
            "ordering": false,
            "paging": false,
            "info": false,
            "processing": true,
            "serverSide": true,
            "ajax": {
                "url": '@Url.Action("FindData2")',
                "data": function(d) {
                    d.startDate = $("#startDt").val();
                    d.endDate = $("#endDt").val();

                }
            },
            "dom": 'T<"clear">lfrtip',
            "tableTools": {
                "sSwfPath": pathToSWF
            }

        });

        var tbl3 = $("#tbl3").DataTable(
        {
            "lengthChange": false,
            "searching": false,
            "ordering": false,
            "paging": false,
            "info": false,
            "processing": true,
            "serverSide": true,
            "ajax": {
                "url": '@Url.Action("FindData3")',
                "data": function(d) {
                    d.startDate = $("#startDt").val();
                    d.endDate = $("#endDt").val();

                }
            },
            "dom": 'T<"clear">lfrtip',
            "tableTools": {
                "sSwfPath": pathToSWF
            }

        });
        $("#btnSearch").click(function () {

            switch ($("#reportType").val()) {
            case "1":
                $("#rpt1").show();
                $("#rpt2").hide();
                $("#rpt3").hide();
                tbl1.ajax.reload();
                break;
            case "2":
                $("#rpt1").hide();
                $("#rpt2").show();
                $("#rpt3").hide();
                tbl2.ajax.reload();
                break;
            case "3":
                    $("#rpt1").hide();
                    $("#rpt2").hide();
                    $("#rpt3").show();
                    tbl3.ajax.reload();
                    break;
              default:
            }
            tbl1.ajax.reload();
            tbl2.ajax.reload();
            tbl3.ajax.reload();
        });

        //first load
        $("#rpt1").hide();
        $("#rpt2").hide();
        $("#rpt3").hide();
        //tbl1.ajax.reload();
      
    </script>
}

