@model CashCard.Models.CashIn
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutBootstrap.cshtml";
}

@if (Model.Id == 0)
{
    <h2>Create</h2>
}
else
{
    <h2>Update</h2>
}

<div id="errorInfo" class="row">
    <div class="col-lg-12">
        <div class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span>
            <span id="errorText"> Enter a valid email address</span>

        </div>
    </div>
</div>



<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Modal title</h4>
            </div>
            <div class="modal-body">
                <form id="detail">

                    <input id="cashInDetailId" type="hidden" />


                 


                    <div class="form-group ">
                        <label>Note</label>
                        <div>
                            <input id="Note2" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group ">
                        <label>Amount</label>
                        <div>
                            <input id="Amount" name="Amount" type="text" class="form-control" required number="true" />
                        </div>
                    </div>


                   

                    <div class="form-group ">
                        <button type="button" id="addToTbl" class="btn btn-primary">Add</button>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <fieldset>
            <legend> Cashout Regular</legend>
            @Html.ValidationSummary(true)
            @Html.HiddenFor(p => p.Id)



            <div class="form-group">
                @Html.LabelFor(model => model.Date, new { @class = "control-label col-md-1" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.Date)
                    @*@Html.TextBoxFor(model => model.Date, new { @class = "form-control", @Value = Model??DateTime.Now.ToString("yyyy/MM/dd") })*@
                    @Html.ValidationMessageFor(model => model.Date)
                    <span class="label label-info">State : @Html.DisplayFor(p => p.State)</span>

                </div>

              
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Note, new { @class = "control-label col-md-1" })
                <div class="col-md-5">
                    @Html.TextBoxFor(model => model.Note, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Note)
                </div>

              
            </div>
            
            <div class="form-group">
                @Html.LabelFor(model => model.Total, new { @class = "control-label col-md-1" })
                <div class="col-md-5">
                    @Html.TextBoxFor(model => model.Total, new { @class = "form-control", @readonly="readonly", @data_val = "false" })
                  
                </div>


            </div>

            <div class="form-group">

                <label class="col-md-1 control-label" ></label>
                <div class="col-md-5">
                  
                        <input type="submit" value="Save As Draft" id="saveDraft" class="btn btn-success " />
                    
                        <input type="submit" value="Save As Final" id="saveFinal" class="btn btn-warning " />
                    
                    </div>
               
            </div>



        </fieldset>




    </div>


}



<hr />

<div class="row">
    <div class="col-md-offset-10 col-md-2">
        <button type="button" class="btn btn-primary form-control" data-toggle="modal" data-target="#myModal">
            Add Detail
        </button>
    </div>
</div>

<div class="row" id="rowTable">
    <div class="col-lg-12">
        <table id="tbl" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Note</th>
                    <th>Amount</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var a in Model.CashInDetails)
                    {
                        <tr>
                            <td>
                                @Html.DisplayTextFor(i => a.Id)
                            </td>
                           
                            <td>
                                @Html.DisplayFor(i => a.Note)
                            </td>
                           
                            <td>
                                @Html.DisplayFor(i => a.Amount)
                            </td>
                           
                            <td>
                                <a href="#">Edit</a>
                                <a href="#">Delete</a>
                            </td>
                        </tr>
                    }
                }


            </tbody>
        </table>
    </div>
</div>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>


@section Scripts {
    @Scripts.Render("~/bundle/datatable")
    @Scripts.Render("~/bundles/jquerynumber")
@Scripts.Render("~/bundles/numeral")
    <script type="text/javascript">

       
      
        $("#Amount").number(true, 0);
        $("#Total").number(true, 0);
     

        $("#errorInfo").hide();
        var tbl = $("#tbl").DataTable(
        {
            "searching": false,
            "lengthChange": false,
            //"scrollY": "200px",
            //"scrollCollapse": true,
            "paging": false,
            "columnDefs": [
                {
                    "targets": [0],
                    "visible": false,
                    "ordering": false
                },
                {
                    "targets": [3],
                    "render": function(data, type, full, meta) {
                        return " <a href='#' class='editDetail'>Edit</a> | <a href='#' class='deleteDetail'>Delete</a>";
                    }
                }
            ]

        });

      

        $("#addToTbl").click(function(e) {
            e.preventDefault();
            if ($("#detail").valid()) {

                var total = 0;
                if ($("#Total").val()) {
                    total = Number($("#Total").val());
                }


                var subTotal = Number($("#Amount").val());
                total = total + subTotal;
                $("#Total").val(total);

                tbl.row.add([
                    $("#cashInDetailId").val(),  $("#Note2").val(), numeral($("#Amount").val()).format('0,0')]).draw();

                $('#Note2').focus();
                $("#Note2").val('');
             
                $("#Amount").val('');
               
                $("#cashInDetailId").val("0");
            }

        });
       

        $('#rowTable').on('click', '.editDetail', function() {
            var tr=  $(this).closest('tr');
            var rowData = tbl.row(tr).data();
            $("#Note2").val(rowData[1]);
            $("#Amount").val(rowData[2]);
            $("#cashInDetailId").val(rowData[0]);

            tbl.row(tr).remove().draw();

            $('#myModal').modal('show');

            var total = $("#Total").val();
            total = total - rowData[2];
            $("#Total").val(total);
        });

        $('#rowTable').on('click', '.deleteDetail', function() {
            var tr=  $(this).closest('tr');
            var rowData = tbl.row(tr).data();

            tbl.row(tr).remove().draw();



            var total = $("#Total").val();
            total = total - rowData[2];
            $("#Total").val(total);
        });
      


      
        $("#Date").datepicker({ dateFormat: "yy/mm/dd" });


        //get cashflow
        function getCashFlow() {
            var cashFlow = { "Id": 0, "Date": "", "Note": "", "CashInDetails": [] };
            // var regularDetail = { "Id": 0, "RegularQuidId": 0, "Note1": "", "Note2": "", "Amount": 0, "Qty": 0 };
            cashFlow.Id = $("#Id").val();
            cashFlow.Date = $("#Date").val();
            cashFlow.Note = $("#Note").val();
            var datas = tbl.rows().data();
            for (var i = 0; i < datas.length; i++) {
                var dt = datas[i];
                var cashInDetail = { "Id": 0,  "Note": "",  "Amount": 0};
                cashInDetail.Id = dt[0];
                cashInDetail.Note = dt[1];
                cashInDetail.Amount =  numeral().unformat(dt[2]);
              
                cashFlow.CashInDetails.push(cashInDetail);
            }
            return cashFlow;
        }


        $("#saveDraft").click(function(e) {
            e.preventDefault();
            var form = $(this).parents('form:first');
            if (form.valid()) {
                var cashFlow = getCashFlow();
                $.ajax({
                    url: '/CashFlow/CreateCashInDraft',
                    data: JSON.stringify(cashFlow),
                    type: 'POST',
                    contentType: 'application/json;',
                    dataType: 'json',
                    success: function(result) {

                        if (result.Success == "1") {
                            window.location.href = "/Cashflow/index";
                        } else {
                            $("#errorText").text(result.ex);
                            $("html, body").animate({ scrollTop: 0 }, "slow");
                            $("#errorInfo").show();
                        }
                    }

                });
            }
        });

        $("#saveFinal").click(function(e) {
            e.preventDefault();

            var form = $(this).parents('form:first');
            if (form.valid()) {
                //Ajax call here

                var cashFlow = getCashFlow();
                $.ajax({
                    url: '/CashFlow/CreateCashInFinal',
                    data: JSON.stringify(cashFlow),
                    type: 'POST',
                    contentType: 'application/json;',
                    dataType: 'json',
                    success: function(result) {

                        if (result.Success == "1") {
                            window.location.href = "/Cashflow/index";
                        } else {
                            $("#errorText").text(result.ex);
                            $("html, body").animate({ scrollTop: 0 }, "slow");
                            $("#errorInfo").show();
                        }
                    }

                });
            }
        });

        $("#detail").validate();
    </script>
    <style>
    </style>

}
