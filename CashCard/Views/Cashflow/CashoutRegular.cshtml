@model CashCard.Models.CashOutRegular
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutBootstrap.cshtml";
}

<h2>Create</h2>

<div id="errorInfo" class="row">
    <div class="col-lg-12">
        <div class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span>
            <span id="errorText"> Enter a valid email address</span>
           
        </div>
    </div>
</div>

@using (Html.BeginForm())
{
   
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>CashFlow</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(p=>p.Id)
        
        <div class="form-group">
            <div class="col-md-offset-9 col-md-3">
                <input type="submit" value="Save As Draft" id="saveDraft" class="btn btn-success" />
                <input type="submit" value="Save As Final" id="saveFinal" class="btn btn-warning" />
            </div>
           
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Date, new {@class = "control-label col-md-1"})
            <div class="col-md-11">
                @Html.EditorFor(model => model.Date)
                @*@Html.TextBoxFor(model => model.Date, new { @class = "form-control", @Value = Model??DateTime.Now.ToString("yyyy/MM/dd") })*@
                @Html.ValidationMessageFor(model => model.Date)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Note, new {@class = "control-label col-md-1"})
            <div class="col-md-11">
                @Html.TextBoxFor(model => model.Note, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Note)
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.State, new { @class = "control-label col-md-1" })
            <div class="col-md-11">
                @Html.TextBoxFor(model => model.State, new { @class = "form-control", @readonly = "readonly", @data_val = "false" })
              
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Total, new {@class = "control-label col-md-1"})
            <div class="col-md-11">
                @Html.TextBoxFor(model => model.Total, new { @class = "form-control", @readonly = "readonly", @data_val = "false"})
               @* @Html.ValidationMessageFor(model => model.Total)*@
            </div>
        </div>
        
    </div>


}




<div class="row well  well-sm">
    <form id="detail">

        <input id="regularDetailId" type="hidden" />
        <div class="col-md-4">

            <div class="form-group">
                <label>Name</label>
                <div>
                    @Html.DropDownList("RegularQuiz", (SelectList)ViewBag.RegularQuiz, new { @class = "form-control", data_live_search = "true" })
                </div>
                <p id="info" class="help-block">Example block-level help text here.</p>
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <label>Note1</label>
                <div>
                    <input id="Note1" class="form-control" />
                </div>
            </div>
        </div>

        <div class="col-md-2">
            <div class="form-group ">
                <label>Note2</label>
                <div>
                    <input id="Note2" class="form-control" />
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group ">
                <label>Amount</label>
                <div>
                    <input id="Amount" name="Amount"  type="text" class="form-control" required number="true"  />
                </div>
            </div>
        </div>
        <div class="col-md-1"> 
            <div class="form-group ">
                <label>Qty</label>
                <div>
                    <input id="Qty" name="Qty"  type="text" class="form-control" required number="true"  />
                </div>
            </div>
        </div>

        <div class="col-md-1">
            <button id="addToTbl" class="btn btn-default" style="margin-top: 25px;">Add</button>
        </div>
      
    </form>


</div>


<div class="row">
    <div class="col-lg-12">
        <table id="tbl" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>IdQuiz</th>
                    <th>Name</th>
                    <th>Note1</th>
                    <th>Note2</th>
                    <th>Amount</th>
                    <th>Qty</th>
                    <th>Subtotal</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var a in Model.RegularDetails)
                    {
                        <tr>
                            <td>
                                @Html.DisplayTextFor(i => a.Id)
                            </td>
                            <td>
                                @Html.DisplayTextFor(i => a.RegularQuizId)
                            </td>
                            <td>
                                @Html.DisplayTextFor(i => a.RegularDetailQuiz.Quiz)
                            </td>
                            <td>
                                @Html.DisplayTextFor(i => a.Note1)
                            </td>
                            <td>
                                @Html.DisplayTextFor(i => a.Note2)
                            </td>
                            <td>
                                @Html.DisplayTextFor(i => a.Amount)
                            </td>
                            <td>
                                @Html.DisplayTextFor(i => a.Qty)
                            </td>
                            <td>
                                @Html.DisplayTextFor(i => a.SubTotal)
                            </td>
                        </tr>
                    }
                }
                
                
            </tbody>
        </table>
    </div>
</div>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>


@section Scripts {
    @Scripts.Render("~/bundle/datatable")
    @Scripts.Render("~/bundles/jquerynumber")
    <script type="text/javascript">

        function numberWithCommas(x) {
            return x.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
        }

        $("#Qty").number(true, 0);
        $("#Amount").number(true, 0);
        $("#Total").number(true, 0);


        $("#errorInfo").hide();
        var tbl = $("#tbl").DataTable(
        {
            "searching": false,
            "lengthChange": false,
            "scrollY": "200px",
            "scrollCollapse": true,
            "paging": false,
            "columnDefs": [
                {
                    "targets": [0],
                    "visible": false,
                    "ordering": false
                },
                {
                    "targets": [1],
                    "visible": false
                }
            ]

        });

        $("#RegularQuiz").selectpicker();


        $("#addToTbl").click(function(e) {
            e.preventDefault();
            if ($("#detail").valid()) {

                var total = 0;
                if ($("#Total").val()) {
                    total = Number($("#Total").val());
                }


                var subTotal = Number($("#Amount").val()) * Number($("#Qty").val());
                total = total + subTotal;
                $("#Total").val(total);

                tbl.row.add([
                    "0", $("#RegularQuiz").val(), $("#RegularQuiz option:selected").text(), $("#Note1").val(),
                    $("#Note2").val(), $("#Amount").val(), $("#Qty").val(), subTotal
                ]).draw();
                $('[data-id="RegularQuiz"]')[0].focus();
                $("#Note1").val('');
                $("#Note2").val('');
                $("#Amount").val('');
                $("#Qty").val('');
                $("#regularDetailId").val("0");
            }

        });


        $('#tbl tbody').on('click', 'tr', function() {
            var rowData = tbl.row(this).data();
            $("#RegularQuiz").selectpicker("val", rowData[1]);
            //$("#RegularQuiz").val(rowData[0]);
            //$("#RegularQuiz").selectpicker('refresh');

            $("#Note1").val(rowData[3]);
            $("#Note2").val(rowData[4]);
            $("#Amount").val(rowData[5]);
            $("#Qty").val(rowData[6]);
            $("#regularDetailId").val(rowData[0]);

            tbl.row(this).remove().draw();
            // rowData.remove();

            var total = $("#Total").val();
            total = total - rowData[7];
            $("#Total").val(total);

        });

        var data = @Html.Raw(Json.Encode(ViewBag.RegularQuizInfo));


        $("#RegularQuiz").change(function() {
            var selected = $(this).find("option:selected").val();

            var element = $.grep(data, function(e) { return e.Id == selected; });

            $("#info").html(element[0].Info);
        });

        $("#Date").datepicker({ dateFormat: "yy/mm/dd" });


        //get cashflow
        function getCashFlow() {
            var cashFlow = { "Id": 0, "Date": "", "Note": "", "RegularDetails": [] };
            // var regularDetail = { "Id": 0, "RegularQuidId": 0, "Note1": "", "Note2": "", "Amount": 0, "Qty": 0 };
            cashFlow.Id = $("#Id").val();
            cashFlow.Date = $("#Date").val();
            cashFlow.Note = $("#Note").val();
            var datas = tbl.rows().data();
            for (var i = 0; i < datas.length; i++) {
                var dt = datas[i];
                var regularDetail = { "Id": 0, "RegularQuidId": 0, "Note1": "", "Note2": "", "Amount": 0, "Qty": 0 };
                regularDetail.Id = dt[0];
                regularDetail.RegularQuizId = dt[1];
                regularDetail.Note1 = dt[3];
                regularDetail.Note2 = dt[4];
                regularDetail.Amount = dt[5];
                regularDetail.Qty = dt[6];
                cashFlow.RegularDetails.push(regularDetail);
            }
            return cashFlow;
        }


        $("#saveDraft").click(function(e) {
            e.preventDefault();
            var form = $(this).parents('form:first');
            if (form.valid()) {
                var cashFlow = getCashFlow();
                $.ajax({
                    url: '/CashFlow/CreateCashoutRegularDraft',
                    data: JSON.stringify(cashFlow),
                    type: 'POST',
                    contentType: 'application/json;',
                    dataType: 'json',
                    success: function(result) {

                        if (result.Success == "1") {
                            window.location.href = "/Cashflow/index";
                        } else {
                            $("#errorText").text(result.ex);
                            $("html, body").animate({ scrollTop: 0 }, "slow");
                            $("#errorInfo").show();
                        }
                    }

                });
            }
        });

        $("#saveFinal").click(function(e) {
            e.preventDefault();

            var form = $(this).parents('form:first');
            if (form.valid()) {
                //Ajax call here

                var cashFlow = getCashFlow();
                $.ajax({
                    url: '/CashFlow/CreateCashoutRegularFinal',
                    data: JSON.stringify(cashFlow),
                    type: 'POST',
                    contentType: 'application/json;',
                    dataType: 'json',
                    success: function(result) {

                        if (result.Success == "1") {
                            window.location.href = "/Cashflow/index";
                        } else {
                            $("#errorText").text(result.ex);
                            $("html, body").animate({ scrollTop: 0 }, "slow");
                            $("#errorInfo").show();
                        }
                    }

                });
            }
        });
        $("#detail").validate();
    </script>
    <style>

        </style>
   
}
