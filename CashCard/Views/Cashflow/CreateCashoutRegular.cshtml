@model CashCard.Models.CashOutRegular
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutBootstrap.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>CashFlow</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Date, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Date, new {data_provider="datepicker"})
                @Html.ValidationMessageFor(model => model.Date)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Note, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Note)
                @Html.ValidationMessageFor(model => model.Note)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.State, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.State)
                @Html.ValidationMessageFor(model => model.State)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LogNote, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LogNote)
                @Html.ValidationMessageFor(model => model.LogNote)
            </div>
        </div>

       
       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>  
    
}

<div class="row">
    <div class="col-md-3">

        <div class="form-group">
            <label>Name</label>
            <div>
                @Html.DropDownList("RegularQuiz", (SelectList)ViewBag.RegularQuiz, new {@class="form-control", data_live_search = "true" })
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label>Name</label>
            <div>
                <input id="name2" class="form-control" />
            </div>

        </div>
    </div>
    <div class="col-md-3">


        <button id="addToTbl" class="btn btn-default" style="margin-top: 25px;">Add</button>



    </div>



</div>

<div class="row">
    <div class="col-lg-12">
        <table id="tbl" class="display">
            <thead>
                <tr>
                    <th>
                        AB
                    </th>
                    <th>BC</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>xxx</td>
                    <td>yyyy</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>


@section Scripts {
    @Scripts.Render("~/bundle/datatable")
    <script type="text/javascript">

        var tbl = $("#tbl").DataTable(
        {
            "searching": false,
            "lengthChange": false
        });

        $('#tbl')
            .removeClass('display')
            .addClass('table table-striped table-bordered');

        $("#addToTbl").click(function() {
            tbl.row.add([$("#RegularQuiz").val(), $("#name2").val()]).draw();
        });
        $("#RegularQuiz").selectpicker();

        $('#tbl tbody').on('click', 'tr', function () {
            var rowData = tbl.row(this).data();
            $("#RegularQuiz").val(rowData[0]);
            $("#RegularQuiz").selectpicker('refresh');
            $("#name2").val(rowData[1]);
            // ... do something with `rowData`
        });
    </script>
   
}
