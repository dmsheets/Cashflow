</div>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>


@section Scripts {
    @Scripts.Render("~/bundle/datatable")
    <script type="text/javascript">

        var tbl = $("#tbl").DataTable(
        {
            "searching": false,
            "lengthChange": false,
            "scrollY": "200px",
            "scrollCollapse": true,
            "paging": false,
            "columnDefs": [
                {
                    "targets": [0],
                    "visible": false,
                    "ordering": false
                },
                {
                    "targets": [1],
                    "visible": false
                }
            ]
        });


        $("#addToTbl").click(function() {
            tbl.row.add(["0", $("#RegularQuiz").val(), $("#RegularQuiz option:selected").text(), $("#Note1").val(), $("#Note2").val(), $("#Amount").val(), $("#Qty").val()]).draw();
        });
        $("#RegularQuiz").selectpicker();

        $('#tbl tbody').on('click', 'tr', function() {
            var rowData = tbl.row(this).data();
            $("#RegularQuiz").val(rowData[0]);
            $("#RegularQuiz").selectpicker('refresh');
            $("#name2").val(rowData[1]);
            // ... do something with `rowData`
        });

        var data = @Html.Raw(Json.Encode(ViewBag.RegularQuizInfo));


        $("#RegularQuiz").change(function() {
            var selected = $(this).find("option:selected").val();

            var element = $.grep(data, function(e) { return e.Id == selected; });

            $("#info").html(element[0].Info);
        });

        $("#Date").datepicker();


        //Save data
        function save() {
            var cashFlow = { "Id": 0, "Date": "", "Note": "", "RegularDetails": [] };
           // var regularDetail = { "Id": 0, "RegularQuidId": 0, "Note1": "", "Note2": "", "Amount": 0, "Qty": 0 };
            cashFlow.Date = $("#Date").val();
            cashFlow.Note = $("#Note").val();
            var datas = tbl.rows().data();
            for (var i = 0; i < datas.length; i++) {
                var dt = datas[i];
                var regularDetail = { "Id": 0, "RegularQuidId": 0, "Note1": "", "Note2": "", "Amount": 0, "Qty": 0 };
                regularDetail.Id = dt[0];
                regularDetail.RegularQuizId = dt[1];
                regularDetail.Note1 = dt[3];
                regularDetail.Note2 = dt[4];
                regularDetail.Amount = dt[5];
                regularDetail.Qty = dt[6];
                cashFlow.RegularDetails.push(regularDetail);
            }

            $.ajax({
                url: '/CashFlow/CreateCashoutRegular2',
                data: JSON.stringify(cashFlow),
                type: 'POST',
                contentType: 'application/json;',
                dataType: 'json',
                success: function(result) {

                    if (result.Success == "1") {
                        window.location.href = "/Sales/index";
                    } else {
                        alert(result.ex);
                    }
                }

            });
        }

        $("#test").click(function() {
            save();
        });


    </script>
    <style>

        </style>
   
}
